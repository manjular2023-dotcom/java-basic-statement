import java.util.*;
public class Main{
    public static void main(String []args){
        Scanner sc = new Scanner(System.in);
        int num = sc.nextInt();
        int sum=0,rem=0,n=num;
        while(num>0){
            rem=num % 10;
            sum+=rem;
            num/=10;
    }
   if(n%sum==0)
   {
       System.out.println("Harshad Number");
   }
        else{
            System.out.println("Not Harshad Number"); 
        }
         }
}
